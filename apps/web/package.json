{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "deploy:staging:rules": "firebase use rep-flow-staging && firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:prod:rules": "firebase use rep-flow-prod && firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:all:rules": "pnpm run deploy:staging:rules && pnpm run deploy:prod:rules",
    "deploy:staging": "firebase deploy --only hosting --project rep-flow-staging",
    "deploy:prod": "firebase deploy --only hosting --project rep-flow-prod",
    "deploy:all": "pnpm run deploy:staging && pnpm run deploy:prod"
  },
